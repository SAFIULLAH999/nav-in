# Worker Service Environment Configuration
# Copy this file to .env.worker and configure the values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/navin_production"

# Redis Configuration (for BullMQ)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Queue Configuration
QUEUE_CONCURRENCY="5"
JOB_RETRY_ATTEMPTS="3"

# Worker Configuration
WORKER_CHECK_INTERVAL="30000"
WORKER_BATCH_SIZE="10"
WORKER_MAX_RETRIES="3"
WORKER_RETRY_DELAY="5000"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/worker.log"

# Health Check
HEALTH_CHECK_PORT="3001"

# Scraping Configuration
SCRAPING_RATE_LIMIT="100"
SCRAPING_TIMEOUT="30000"
SCRAPING_MAX_RETRIES="3"

# Email Configuration (for email jobs)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="NavIN <noreply@navin.com>"

# API Configuration
API_BASE_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret"

# Monitoring
SENTRY_DSN=""
SLACK_WEBHOOK_URL=""
